<?xml version="1.0" encoding="utf-8"?>

<objects xmlns="http://www.springframework.net">

  <object id="CompanyDbContext" type="CompanyManagement.Data.CompanyDbContext, CompanyManagement.Data"
          singleton="false" />

  <object id="CompanyWriteRepository"
          type="CompanyManagement.Data.Repositories.CompanyWriteRepository, CompanyManagement.Data" singleton="false">
    <constructor-arg ref="CompanyDbContext" />
  </object>

  <object id="CompanyReadRepository"
          type="CompanyManagement.Data.Repositories.CompanyReadRepository, CompanyManagement.Data" singleton="false">
    <constructor-arg ref="CompanyDbContext" />
  </object>

  <object id="ApplicationService"
          type="CompanyManagement.Data.ApplicationService.ApplicationService, CompanyManagement.Data" singleton="false">
    <constructor-arg ref="CompanyReadRepository" />
    <constructor-arg ref="CompanyWriteRepository" />
  </object>

</objects>
